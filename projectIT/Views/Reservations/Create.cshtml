@model projectIT.Models.SeatListModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<h1>Име на претстава: @Model.Performance.PerformanceName</h1>
<h1>Датум на одржување: @Model.Performance.PerformanceDateTime</h1>
<h1>Место на одржување: @Model.Performance.Building.BuildingName</h1>
@using (Html.BeginForm("Create", "Reservations",FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div>

        @foreach (var item in Model.availableSeats)
        {
        <div class="checkbox">
            <label>

                @if (item.status == false)
                {
                    <input type="checkbox"
                           name="selectedSeats"
                           value="@item.SeatId" />@item.SeatNumber
                    }
            </label>
            </div>
        }


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input name="btn" type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


